<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean id="zipkinProperties" class="com.constants.ZipkinProperties">
		<property name="compressionEnabled" value="${com.zipkin.compressionEnabled}"/>
		<property name="flushInterval" value="${com.zipkin.flushInterval}"/>
		<property name="serviceName" value="${com.zipkin.serviceName}"/>
		<property name="connectTimeout" value="${com.zipkin.connectTimeout}"/>
		<property name="readTimeout" value="${com.zipkin.readTimeout}"/>
		<property name="url" value="${com.zipkin.url}"/>
	</bean>

</beans>